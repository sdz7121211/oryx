  <profiles>
    <profile>
      <id>release-sign-artifacts</id>
      <activation>
        <property>
          <name>performRelease</name>
          <value>true</value>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-gpg-plugin</artifactId>
            <executions>
              <execution>
                <id>sign-artifacts</id>
                <phase>verify</phase>
                <goals>
                  <goal>sign</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <keyname>Sean Owen (Cloudera) &lt;sowen@cloudera.com&gt;</keyname>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <!-- Separate profile for older Hadoop because they require a recompile, due to protobuf 2.4-to-2.5
      difference, among others. For example this configures for the latest Hadoop 2.0.x-based CDH 4.6: -->
    <profile>
      <id>hadoop200</id>
      <properties>
        <hadoop.version>2.2.0</hadoop.version>
        <crunch.version>0.10.0-SNAPSHOT</crunch.version>
      </properties>
    </profile>
    <!-- Separate profile for 2.3.0 because of thinks like enum difference in JobContext? -->
    <profile>
      <id>hadoop230+</id>
      <properties>
        <hadoop.version>2.3.0</hadoop.version>
        <crunch.version>0.10.0-SNAPSHOT</crunch.version>
      </properties>
    </profile>
  </profiles>

